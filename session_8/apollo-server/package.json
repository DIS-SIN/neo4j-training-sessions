{
  "name": "grand-stack-starter-api",
  "version": "0.0.1",
  "description": "API app for GRANDstack",
  "main": "src/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start-dev": "./node_modules/.bin/nodemon --exec babel-node src/index.js",
    "build": "babel src -d build; cp .env build",
    "now-build": "babel src -d build; cp .env build",
    "start": "npm run build && node build/index.js"
  },
  "author": "Nghia Doan",
  "license": "MIT",
  "dependencies": {
    "apollo-boost": "^0.4.3",
    "apollo-cache-inmemory": "^1.6.2",
    "apollo-client": "^2.6.3",
    "apollo-link-http": "^1.5.15",
    "apollo-server": "^2.7.0",
    "dotenv": "^8.0.0",
    "graphql-tag": "^2.10.1",
    "neo4j-driver": "^1.7.5",
    "neo4j-graphql-js": "^2.6.3",
    "node-fetch": "^2.6.0",
    "chokidar": "^3.0.2",
    "braces": "^3.0.2"
  },
  "resolutions": {
    "neo4j-graphql-js/graphql": "14.4.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "husky": "^3.0.1",
    "lint-staged": "^9.2.0",
    "nodemon": "^1.19.1",
    "lodash": "^4.17.15"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,graphql": [
      "prettier --write",
      "git add"
    ]
  }
}
